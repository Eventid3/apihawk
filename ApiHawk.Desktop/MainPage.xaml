<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApiHawk.Desktop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Welcome to ApiHawk!"
                FontSize="Title"
                TextColor="{DynamicResource PrimaryColor}"
                HorizontalOptions="Center" />
            <Button
                x:Name="GetButton"
                WidthRequest="100"
                HeightRequest="50"
                Text="Get"
                Clicked="GetButton_OnClicked"/>
            <Label
                Text="Response:"/>
            <Label
                x:Name="ResponseLabel"
                WidthRequest="300"
                HeightRequest="500"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
